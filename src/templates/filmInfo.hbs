<div class="page-container">
    <h1 class="page-title">Информация о фильме</h1>
    <div class="js-home">
        <ul class="page-main__films-list">
            <li class="film__card">
                <div class="film__card-wrapper">
                    <div class="film__poster-wrapper">
                        <img class="film__poster" src='http://image.tmdb.org/t/p/w300{{poster_path}}'
                            alt={{original_title}} />
                        <div class="film__card-stars"><i class="material-icons icon--star">stars</i>{{vote_average}}
                        </div>
                    </div>
                    <div class="film__card-buttons">
                        <button id="overlooked" class="film__card-button">
                            <i class="material-icons icon--star">folder_open</i><span class="btn-span">Добавить в
                                просмотренные</span>
                        </button>
                        <button id="add-to-queue" class="film__card-button">
                            <i class="material-icons icon--star">add_circle_outline</i><span class="btn-span">Добавить
                                в очередь просмотра</span>
                        </button>
                    </div>
                </div>

                <div class="film__card-description">
                    <div class="film__card-attr">
                        <h3 class="film__card-title">{{title}}</h3>
                        <div class="attr-item "><span style="font-weight:bold">Дата выхода: </span>
                            <span>{{release_date}}</span></div>
                        <div class="attr-item "><span style="font-weight:bold">Жанр: </span>
                            <span>{{#each genres}}
                                <span>| {{this.name}}</span>
                                {{/each}}</span>
                        </div>
                        <div class="attr-item"><span style="font-weight:bold">Оригинальное название: </span>
                            <span>{{ original_title}}</span>
                        </div>
                        <div class="attr-item"><span style="font-weight:bold">Студия: </span>
                            <span>{{#each production_companies}}
                                <span>| {{this.name}}</span>
                                {{/each}}</span>
                        </div>

                        <div class="attr-item"><span style="font-weight:bold">Страна: </span>
                            <span>{{#each production_countries}}
                                <span>| {{this.name}}</span>
                                {{/each}}</span>
                        </div>
                    </div>
                    <hr>
                    <p class="text-summary"> {{overview}}</p>
                </div>
        </ul>
    </div>
</div>